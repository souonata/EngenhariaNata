{
  "name": "engenharia-nata",
  "version": "1.0.0",
  "description": "Portfólio de apps web educativos para engenharia e finanças - JavaScript puro, bilíngue PT/IT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .js --fix",
    "lint:check": "eslint . --ext .js",
    "format": "prettier --write \"**/*.{js,css,html,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,css,html,json,md}\"",
    "style:lint": "stylelint \"**/*.css\" --fix",
    "style:check": "stylelint \"**/*.css\"",
    "version:patch": "node scripts/update-versions.js patch",
    "version:minor": "node scripts/update-versions.js minor",
    "version:major": "node scripts/update-versions.js major",
    "test": "echo \"Tests not configured yet\" && exit 0",
    "validate": "npm run lint:check && npm run format:check && npm run style:check",
    "prebuild": "npm run version:patch"
  },
  "keywords": [
    "engenharia",
    "calculadora",
    "educacional",
    "javascript",
    "portugues",
    "italiano",
    "solar",
    "helice",
    "bitola",
    "financiamento"
  ],
  "author": "EngenhariaNata",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/souonata/EngenhariaNata.git"
  },
  "homepage": "https://engnata.infinityfree.me",
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "terser": "^5.27.0",
    "vite": "7.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
